
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "es5",
      "es2015",
      "es6",
      "dom",
      "es2017.object"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "actions/*": ["./src/actions/*"],
      "components/*": ["./src/components/*"],
      "constants/*": ["./src/constants/*"],
      "containers/*": ["./src/containers/*"],
      "consumers/*": ["./src/consumers/*"],
      "@graphql/*": ["./src/graphql/*"],
      "reducers/*": ["./src/reducers/*"],
      "sagas/*": ["./src/sagas/*"],
      "selectors/*": ["./src/selectors/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src/**/*", "jest.config.js"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.css",
    "**/*.js",
    "**/*.jsx"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}